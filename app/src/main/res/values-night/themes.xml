<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_purple_200</item>
        <item name="colorPrimaryVariant">@color/dark_background</item>
        <item name="colorOnPrimary">@color/dark_text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_teal_200</item>
        <item name="colorSecondaryVariant">@color/dark_teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Edge-to-edge display -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <!-- Toolbar color -->
        <item name="actionBarStyle">@style/Widget.App.ActionBar.Dark</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar.Dark</item>
    </style>
    
    <!-- Custom dark toolbar style -->
    <style name="Widget.App.Toolbar.Dark" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/dark_background</item>
        <item name="titleTextColor">@color/dark_text_primary</item>
    </style>
    
    <style name="Widget.App.ActionBar.Dark" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="background">@color/dark_background</item>
        <item name="elevation">0dp</item>
    </style>
</resources>